@model IEnumerable<Contact>

<section>
    <div>
        <div class="container">
            <a asp-controller="Contacts" asp-action="Create" class="btn btn-primary"> Create</a>
            <div class="table table-striped">
                <table class="table">
                    <thead>
                        <tr>
                            
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach (var contact in Model.OrderBy(p => p.Name))
                            {
                                <tr>
                                    <td>@contact.Name</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.ContactPhone</td>
                                    <td class="float-end">
                                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ID" class="btn btn-small btn-success"> Details</a>
                                        <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@contact.ID" class="btn btn-small btn-secondary"> Edit</a>
                                        <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@contact.ID" class="btn btn-small btn-danger"> Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>